<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoticeDialog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <color name="positive_btn_background">#FF018786</color>
    <color name="negative_btn_background">#FF03DAC5</color>
    <color name="positive_btn_text_color">#fff</color>
    <color name="negative_btn_text_color">#fff</color>
    <color name="title_text_color">#000</color>
    <color name="body_text_color">#4A4A4A</color>
    <color name="image_loading_progress_color">#673AB7</color>
    <color name="dialog_background_color">#fff</color>
